{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "paths": {
      "#*": ["./src/*"]
    },
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*"],
  "ts-node": { "esm": true }
}